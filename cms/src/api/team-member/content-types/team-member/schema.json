{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member",
    "description": "Profiles for RLC Advocates Team Members"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "bio": {
      "type": "richtext"
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "linkedin_url": {
      "type": "string"
    },
    "facebook_url": {
        "type": "string"
    },
    "twitter_url": {
        "type": "string"
    },
    "instagram_url": {
        "type": "string"
    },
    "order": {
        "type": "integer",
        "default": 100
    }
  }
}
